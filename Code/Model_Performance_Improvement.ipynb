# ============================================================================
# VISUALIZATION
# ============================================================================

def plot_performance_improvement(df, figsize=(20, 10), save_path=None):
    """
    Create scatter plot showing performance improvement across ecoregions.
    
    Parameters:
    -----------
    df : pandas.DataFrame
        DataFrame with performance metrics
    figsize : tuple
        Figure size (width, height)
    save_path : str, optional
        Path to save the figure
        
    Returns:
    --------
    fig : matplotlib.figure.Figure
        Generated figure
    """
    # Create figure
    fig, ax = plt.subplots(figsize=figsize)
    
    # Increase font sizes for publication
    title_fontsize = 24
    label_fontsize = 22
    tick_fontsize = 20
    
    # Define colors and markers for each metric
    colors = ['#2E86AB', '#A23B72', '#F18F01']  # Blue, Purple, Orange
    markers = ['o', 's', '^']  # Circle, Square, Triangle
    metrics = ['OA_improvement', 'F1_improvement', 'Kappa_improvement']
    metric_labels = ['OA Improvement', 'F1 Improvement', 'Kappa Improvement']
    
    # Create x-axis positions for ecoregions
    eco_nums = range(len(df['eco_id']))
    
    # Plot each metric
    point_size = 400  # Size of scatter points
    alpha_value = 0.8  # Transparency
    
    for i, (metric, label) in enumerate(zip(metrics, metric_labels)):
        ax.scatter(eco_nums, df[metric], 
                  color=colors[i], s=point_size, alpha=alpha_value,
                  marker=markers[i], label=label, 
                  edgecolors='black', linewidth=1)
    
    # Add zero reference line
    ax.axhline(y=0, color='gray', linestyle='--', alpha=0.7, linewidth=2)
    
    # Format plot
    ax.set_xlabel('Ecoregion ID', fontsize=label_fontsize, fontweight='bold')
    ax.set_ylabel('Performance Improvement', fontsize=label_fontsize, fontweight='bold')
    
    # Set x-axis ticks to ecoregion IDs
    ax.set_xticks(eco_nums)
    ax.set_xticklabels(df['eco_id'], rotation=90, ha='right', fontsize=tick_fontsize)
    
    # Set y-axis ticks
    ax.tick_params(axis='y', labelsize=tick_fontsize)
    
    # Add grid
    ax.grid(True, alpha=0.3, linestyle='-')
    
    # Add legend
    ax.legend(loc='best', fontsize=18, framealpha=0.7)
    
    # Add statistical summary text box
    stats_text = f"""Performance Improvement Summary:
Mean OA: {df['OA_improvement'].mean():.3f}
Mean F1: {df['F1_improvement'].mean():.3f}
Mean Kappa: {df['Kappa_improvement'].mean():.3f}

Positive Improvements:
OA: {(df['OA_improvement'] > 0).sum()}/{len(df)} ecoregions
F1: {(df['F1_improvement'] > 0).sum()}/{len(df)} ecoregions
Kappa: {(df['Kappa_improvement'] > 0).sum()}/{len(df)} ecoregions"""
    
    # Position text box in upper left
    ax.text(0.02, 0.98, stats_text, transform=ax.transAxes,
            fontsize=16, verticalalignment='top',
            bbox=dict(boxstyle='round', facecolor='wheat', alpha=0.8))
    
    plt.tight_layout()
    
    # Save figure if path provided
    if save_path:
        fig.savefig(f"{save_path}/performance_improvement.png", 
                   dpi=300, bbox_inches='tight')
        fig.savefig(f"{save_path}/performance_improvement.pdf", 
                   dpi=300, bbox_inches='tight')
        print(f"✓ Figure saved: {save_path}/performance_improvement.png")
    
    return fig

# ============================================================================
# ANALYSIS FUNCTIONS
# ============================================================================

def analyze_top_improvements(df, n=5):
    """
    Identify ecoregions with the largest improvements.
    
    Parameters:
    -----------
    df : pandas.DataFrame
        DataFrame with performance metrics
    n : int
        Number of top improvements to show
        
    Returns:
    --------
    top_improvements : pandas.DataFrame
        DataFrame with top n improvements
    """
    print("\n" + "=" * 60)
    print(f"TOP {n} IMPROVEMENTS BY METRIC")
    print("=" * 60)
    
    for metric, label in zip(['OA_improvement', 'F1_improvement', 'Kappa_improvement'],
                            ['OA', 'F1', 'Kappa']):
        print(f"\n{label} Improvement:")
        top = df.nlargest(n, metric)[['eco_id', metric]].round(4)
        for idx, row in top.iterrows():
            print(f"  {row['eco_id']}: {row[metric]:.4f}")
    
    # Return overall top by Kappa (most sensitive metric)
    return df.nlargest(n, 'Kappa_improvement')[['eco_id', 'OA_improvement', 
                                                'F1_improvement', 'Kappa_improvement']]

def analyze_negative_improvements(df):
    """
    Identify ecoregions with negative improvements.
    
    Parameters:
    -----------
    df : pandas.DataFrame
        DataFrame with performance metrics
        
    Returns:
    --------
    negative_df : pandas.DataFrame
        DataFrame with negative improvements
    """
    negative_df = df[df['OA_improvement'] < 0]
    
    if not negative_df.empty:
        print("\n" + "=" * 60)
        print("ECOREGIONS WITH NEGATIVE IMPROVEMENTS")
        print("=" * 60)
        print(negative_df[['eco_id', 'OA_improvement', 'F1_improvement', 
                          'Kappa_improvement']].round(3).to_string(index=False))
    
    return negative_df

# ============================================================================
# MAIN ANALYSIS
# ============================================================================

def main():
    """
    Main function to run performance improvement analysis.
    """
    print("=" * 60)
    print("MODEL PERFORMANCE IMPROVEMENT ANALYSIS")
    print("Corresponding to Fig. 4 in manuscript")
    print("=" * 60)
    
    # Load data
    df = load_performance_data()
    
    # Create output directory
    import os
    output_dir = 'outputs/performance_analysis'
    os.makedirs(output_dir, exist_ok=True)
    
    # Create visualization
    print("\nGenerating performance improvement plot...")
    fig = plot_performance_improvement(df, save_path=output_dir)
    
    # Analyze top improvements
    top_improvements = analyze_top_improvements(df, n=5)
    
    # Analyze negative improvements
    negative_improvements = analyze_negative_improvements(df)
    
    # Save detailed results
    results_path = f"{output_dir}/performance_improvement_results.csv"
    df.to_csv(results_path, index=False)
    print(f"\n✓ Detailed results saved: {results_path}")
    
    # Print overall summary
    print("\n" + "=" * 60)
    print("OVERALL SUMMARY")
    print("=" * 60)
    print(f"Total ecoregions analyzed: {len(df)}")
    print(f"Average improvement across all metrics: {df[['OA_improvement', 'F1_improvement', 'Kappa_improvement']].mean().mean():.4f}")
    print(f"Ecoregions with all positive improvements: {((df['OA_improvement'] > 0) & (df['F1_improvement'] > 0) & (df['Kappa_improvement'] > 0)).sum()}")
    
    # Calculate improvement percentages
    for metric in ['OA', 'F1', 'Kappa']:
        improvement_pct = (df[f'{metric}_improvement'] / df[f'Global_{metric}']) * 100
        print(f"Average % improvement for {metric}: {improvement_pct.mean():.1f}%")
    
    print("\n✓ Analysis complete!")
    print(f"  Outputs saved to: {output_dir}/")
    print("=" * 60)

# ============================================================================
# EXECUTION
# ============================================================================

if __name__ == "__main__":
    main()
