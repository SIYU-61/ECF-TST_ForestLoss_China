# Forest Area Distribution Across Ecoregions
# Boxplot with statistical overlays for forest area analysis
# Corresponds to Fig. 8(e) in the manuscript

"""
OVERVIEW
This notebook analyzes the distribution of forest area across 35 Chinese 
ecoregions from 2001 to 2024, visualizing statistical patterns and trends.

METHODOLOGY
1. Loads forest loss analysis results with ecoregion metadata
2. Creates multi-layer visualization combining:
   - Boxplots showing quartile distribution for each ecoregion
   - Scatter points showing individual year data
   - Statistical curves (mean, median, standard deviation)
3. Analyzes distribution characteristics and regional patterns

ECOREGION CLASSIFICATION
- Group I: Eastern Monsoon Region (I01-I33)
- Group II: Northwest Arid/Semi-Arid Region (II01-II07)  
- Group III: Tibetan Plateau Region (III07-III09)

KEY INSIGHTS
- Reveals skewness in forest area distribution
- Identifies ecoregions with high variability
- Shows temporal patterns in forest area changes
"""

# ============================================================================
# ENVIRONMENT SETUP
# ============================================================================

import pandas as pd
import numpy as np
import matplotlib.pyplot as plt
import seaborn as sns
import os
import warnings
from scipy import stats
warnings.filterwarnings('ignore')

# Set SCI publication standards
plt.rcParams['font.family'] = 'Arial'
plt.rcParams['font.size'] = 12
plt.rcParams['axes.labelsize'] = 14
plt.rcParams['axes.titlesize'] = 16
plt.rcParams['xtick.labelsize'] = 12
plt.rcParams['ytick.labelsize'] = 12
plt.rcParams['legend.fontsize'] = 11
plt.rcParams['figure.dpi'] = 300

# ============================================================================
# DATA LOADING AND PREPARATION
# ============================================================================

def load_forest_area_data(file_path):
    """
    Load forest area data with ecoregion information.
    
    Parameters:
    -----------
    file_path : str
        Path to CSV file with forest area data
        
    Returns:
    --------
    df : pandas.DataFrame
        Cleaned DataFrame with forest area data
    """
    try:
        df = pd.read_csv(file_path)
        print(f"✓ Data loaded: {len(df)} rows")
        print(f"  Years: {df['year'].min()} to {df['year'].max()}")
        print(f"  Ecoregions: {df['eco_id'].nunique()}")
        
        # Ecoregion mapping
        eco_id_mapping = {
            1: 'I01', 2: 'I02', 3: 'I03', 4: 'I04', 5: 'I05', 6: 'I07', 7: 'I08', 
            8: 'I10', 9: 'I11', 10: 'I12', 11: 'I14', 12: 'I15', 13: 'I16', 
            14: 'I17', 15: 'I18', 16: 'I19', 17: 'I20', 18: 'I21', 19: 'I22', 
            20: 'I23', 21: 'I24', 22: 'I25', 23: 'I26', 24: 'I27', 25: 'I28', 
            26: 'I29', 27: 'I30', 28: 'I31', 29: 'I32', 30: 'I33', 31: 'II01', 
            32: 'II05', 33: 'II07', 34: 'III07', 35: 'III09'
        }
        
        # Add ecoregion code column
        df['eco_id_real'] = df['eco_id'].map(eco_id_mapping)
        
        # Ensure area_hectares column exists
        if 'area_hectares' not in df.columns:
            print("✗ 'area_hectares' column not found in data")
            return None
        
        return df
    except Exception as e:
        print(f"✗ Error loading data: {e}")
        return None

def prepare_forest_statistics(df):
    """
    Calculate statistical indicators for each ecoregion.
    
    Parameters:
    -----------
    df : pandas.DataFrame
        DataFrame with forest area data
        
    Returns:
    --------
    eco_stats : pandas.DataFrame
        Statistical summary for each ecoregion
    eco_order : list
        Sorted list of ecoregion IDs
    """
    # Calculate statistics by ecoregion
    eco_stats = df.groupby('eco_id_real').agg({
        'area_hectares': ['mean', 'median', 'std', 'count', 'min', 'max', 'skew']
    }).round(2)
    
    # Flatten column names
    eco_stats.columns = ['mean', 'median', 'std', 'count', 'min', 'max', 'skew']
    eco_stats = eco_stats.reset_index()
    
    # Calculate additional metrics
    eco_stats['mean_median_diff'] = (eco_stats['mean'] - eco_stats['median']).abs()
    eco_stats['std_mean_ratio'] = eco_stats['std'] / eco_stats['mean']
    eco_stats['cv'] = eco_stats['std'] / eco_stats['mean']  # Coefficient of variation
    
    # Sort by mean forest area (descending)
    eco_stats = eco_stats.sort_values('mean', ascending=False)
    eco_order = eco_stats['eco_id_real'].tolist()
    
    print("\nStatistical Summary by Ecoregion:")
    print("=" * 80)
    print(f"{'Ecoregion':<8} {'Mean':<12} {'Median':<12} {'Std Dev':<12} {'CV':<8} {'Skew':<8}")
    print("-" * 80)
    for _, row in eco_stats.iterrows():
        print(f"{row['eco_id_real']:<8} {row['mean']:<12,.0f} {row['median']:<12,.0f} "
              f"{row['std']:<12,.0f} {row['cv']:<8.3f} {row['skew']:<8.3f}")
    
    return eco_stats, eco_order

# ============================================================================
# VISUALIZATION
# ============================================================================

def plot_forest_area_distribution(df, eco_stats, eco_order, 
                                 figsize=(12, 20), save_path=None):
    """
    Create combined boxplot-scatter-statistics plot for forest area distribution.
    
    Parameters:
    -----------
    df : pandas.DataFrame
        DataFrame with forest area data
    eco_stats : pandas.DataFrame
        Statistical summary for ecoregions
    eco_order : list
        Sorted list of ecoregion IDs
    figsize : tuple
        Figure size (width, height)
    save_path : str, optional
        Path to save the figure
        
    Returns:
    --------
    fig : matplotlib.figure.Figure
        Generated figure
    """
    # Create figure
    fig, ax = plt.subplots(figsize=figsize)
    
    # Prepare boxplot data
    boxplot_data = []
    for eco_id in eco_order:
        eco_data = df[df['eco_id_real'] == eco_id]['area_hectares'].values
        boxplot_data.append(eco_data)
    
    # Create horizontal boxplot
    boxplot = ax.boxplot(boxplot_data,
                        vert=False,
                        labels=eco_order,
                        patch_artist=True,
                        widths=0.6,
                        showfliers=False,
                        zorder=1)
    
    # Style boxplot
    colors = plt.cm.Pastel1(np.linspace(0, 1, len(eco_order)))
    for patch, color in zip(boxplot['boxes'], colors):
        patch.set_facecolor(color)
        patch.set_alpha(0.7)
    
    # Style boxplot elements
    for element in ['boxes', 'whiskers', 'caps', 'medians']:
        for line in boxplot[element]:
            line.set_color('gray')
            line.set_linewidth(1)
    
    # Add scatter points for individual years
    years = sorted(df['year'].unique())
    if len(years) <= 10:
        scatter_colors = plt.cm.Set1(np.linspace(0, 1, len(years)))
    else:
        scatter_colors = plt.cm.tab20(np.linspace(0, 1, len(years)))
    
    for i, year in enumerate(years):
        year_data = df[df['year'] == year]
        y_positions = []
        x_values = []
        
        for j, eco_id in enumerate(eco_order):
            eco_year_data = year_data[year_data['eco_id_real'] == eco_id]['area_hectares']
            if len(eco_year_data) > 0:
                for value in eco_year_data:
                    # Add jitter to avoid overplotting
                    jitter = np.random.normal(0, 0.08)
                    y_positions.append(j + 1 + jitter)
                    x_values.append(value)
        
        if x_values:
            ax.scatter(x_values, y_positions, 
                      color=scatter_colors[i], alpha=0.7, s=40,
                      edgecolors='white', linewidth=0.5, zorder=2,
                      label=str(year))
    
    # Add statistical curves
    y_positions = np.arange(1, len(eco_order) + 1)
    
    # Mean curve
    means = [eco_stats.loc[eco_stats['eco_id_real'] == eco_id, 'mean'].values[0] 
             for eco_id in eco_order]
    ax.plot(means, y_positions, 'o-', color='red', linewidth=2, 
            markersize=6, label='Mean', zorder=3, alpha=0.9)
    
    # Median curve
    medians = [eco_stats.loc[eco_stats['eco_id_real'] == eco_id, 'median'].values[0] 
               for eco_id in eco_order]
    ax.plot(medians, y_positions, 's-', color='blue', linewidth=2,
            markersize=5, label='Median', zorder=3, alpha=0.9)
    
    # Standard deviation curve (scaled for visibility)
    stds = [eco_stats.loc[eco_stats['eco_id_real'] == eco_id, 'std'].values[0] 
            for eco_id in eco_order]
    
    # Scale standard deviation if needed
    max_std = max(stds)
    max_mean = max(means)
    if max_std < max_mean * 0.1:
        scale_factor = (max_mean * 0.3) / max_std
        stds_scaled = [s * scale_factor for s in stds]
        std_label = f'Std Dev (×{scale_factor:.1f})'
    else:
        stds_scaled = stds
        scale_factor = 1
        std_label = 'Std Dev'
    
    ax.plot(stds_scaled, y_positions, '^-', color='green', linewidth=2,
            markersize=6, label=std_label, zorder=3, alpha=0.9)
    
    # Format plot
    ax.set_xlabel('Forest Area (hectares)', fontsize=14, fontweight='bold')
    ax.set_ylabel('Ecoregion ID', fontsize=14, fontweight='bold')
    
    # Set x-axis limit
    x_max = max(max(means), max(medians), max(stds_scaled)) * 1.1
    ax.set_xlim(-1000, min(200000, x_max))
    
    # Format x-axis with comma separators
    ax.xaxis.set_major_formatter(plt.FuncFormatter(lambda x, p: format(int(x), ',')))
    
    # Set y-ticks
    ax.set_yticks(range(1, len(eco_order) + 1))
    ax.set_yticklabels(eco_order)
    
    # Add grid
    ax.grid(True, alpha=0.3, linestyle='-', linewidth=0.5)
    ax.set_axisbelow(True)
    
    # Create combined legend
    from matplotlib.lines import Line2D
    legend_elements = []
    
    # Add year markers
    for i, year in enumerate(years[:min(5, len(years))]):  # Show max 5 years
        legend_elements.append(
            Line2D([0], [0], marker='o', color='w', 
                  markerfacecolor=scatter_colors[i], markersize=8, label=f'{year}')
        )
    
    # Add statistical markers
    legend_elements.extend([
        Line2D([0], [0], color='red', marker='o', linewidth=2, 
              markersize=6, label='Mean'),
        Line2D([0], [0], color='blue', marker='s', linewidth=2, 
              markersize=5, label='Median'),
        Line2D([0], [0], color='green', marker='^', linewidth=2, 
              markersize=6, label=std_label)
    ])
    
    # Add legend
    ax.legend(handles=legend_elements, loc='upper right',
             frameon=True, fancybox=True, shadow=True,
             fontsize=10, title='Statistics & Years',
             title_fontsize=11)
    
    plt.tight_layout()
    
    # Save figure if path provided
    if save_path:
        os.makedirs(os.path.dirname(save_path), exist_ok=True)
        fig.savefig(f"{save_path}_forest_area_distribution.png", 
                   dpi=300, bbox_inches='tight')
        fig.savefig(f"{save_path}_forest_area_distribution.pdf", 
                   dpi=300, bbox_inches='tight')
        print(f"✓ Figure saved: {save_path}_forest_area_distribution.png")
    
    return fig, scale_factor

# ============================================================================
# ANALYSIS FUNCTIONS
# ============================================================================

def analyze_distribution_patterns(eco_stats):
    """
    Analyze distribution patterns and characteristics.
    
    Parameters:
    -----------
    eco_stats : pandas.DataFrame
        Statistical summary for ecoregions
        
    Returns:
    --------
    analysis_results : dict
        Dictionary with analysis results
    """
    print("\n" + "=" * 80)
    print("DISTRIBUTION PATTERN ANALYSIS")
    print("=" * 80)
    
    # Skewness analysis
    positive_skew = eco_stats[eco_stats['skew'] > 0.5]
    negative_skew = eco_stats[eco_stats['skew'] < -0.5]
    symmetric = eco_stats[(eco_stats['skew'] >= -0.5) & (eco_stats['skew'] <= 0.5)]
    
    print(f"\nSkewness Distribution:")
    print(f"  Right-skewed (>0.5): {len(positive_skew)} ecoregions")
    print(f"  Left-skewed (<-0.5): {len(negative_skew)} ecoregions")
    print(f"  Approximately symmetric: {len(symmetric)} ecoregions")
    
    # Variability analysis
    high_var = eco_stats[eco_stats['cv'] > 0.5]
    medium_var = eco_stats[(eco_stats['cv'] > 0.2) & (eco_stats['cv'] <= 0.5)]
    low_var = eco_stats[eco_stats['cv'] <= 0.2]
    
    print(f"\nCoefficient of Variation (CV):")
    print(f"  High variability (CV > 0.5): {len(high_var)} ecoregions")
    print(f"  Medium variability (0.2 < CV ≤ 0.5): {len(medium_var)} ecoregions")
    print(f"  Low variability (CV ≤ 0.2): {len(low_var)} ecoregions")
    
    # Mean-median differences
    large_diff = eco_stats[eco_stats['mean_median_diff'] > eco_stats['mean'] * 0.1]
    
    print(f"\nMean-Median Differences:")
    print(f"  Large difference (>10% of mean): {len(large_diff)} ecoregions")
    
    # Extreme cases
    max_skew = eco_stats.loc[eco_stats['skew'].abs().idxmax()]
    max_cv = eco_stats.loc[eco_stats['cv'].idxmax()]
    min_cv = eco_stats.loc[eco_stats['cv'].idxmin()]
    
    print(f"\nExtreme Cases:")
    print(f"  Most skewed: {max_skew['eco_id_real']} "
          f"(skewness = {max_skew['skew']:.3f})")
    print(f"  Highest variability: {max_cv['eco_id_real']} "
          f"(CV = {max_cv['cv']:.3f})")
    print(f"  Lowest variability: {min_cv['eco_id_real']} "
          f"(CV = {min_cv['cv']:.3f})")
    
    return {
        'skewness_groups': {'positive': len(positive_skew), 
                           'negative': len(negative_skew), 
                           'symmetric': len(symmetric)},
        'variability_groups': {'high': len(high_var), 
                              'medium': len(medium_var), 
                              'low': len(low_var)},
        'extreme_cases': {
            'most_skewed': max_skew['eco_id_real'],
            'highest_variability': max_cv['eco_id_real'],
            'lowest_variability': min_cv['eco_id_real']
        }
    }

# ============================================================================
# MAIN ANALYSIS
# ============================================================================

def main():
    """
    Main function to run forest area distribution analysis.
    """
    print("=" * 60)
    print("FOREST AREA DISTRIBUTION ANALYSIS")
    print("Corresponding to Fig. 8(e) in manuscript")
    print("=" * 60)
    
    # Load data (update path as needed)
    data_path = 'sample_data/forest_loss_analysis_results.csv'  # Update with your path
    df = load_forest_area_data(data_path)
    
    if df is None:
        print("✗ Failed to load data. Creating simulated data for demonstration.")
        np.random.seed(42)
        
        # Create simulated data
        eco_ids = [f'I{i:02d}' for i in range(1, 31)] + ['II01', 'II05', 'II07', 'III07', 'III09']
        years = list(range(2001, 2025))
        
        data = []
        for eco_id in eco_ids:
            # Generate base area with ecoregion-specific characteristics
            if eco_id.startswith('I'):
                base_area = np.random.uniform(50000, 200000)
                variability = np.random.uniform(0.1, 0.3)
            elif eco_id.startswith('II'):
                base_area = np.random.uniform(10000, 50000)
                variability = np.random.uniform(0.2, 0.4)
            else:  # III
                base_area = np.random.uniform(20000, 80000)
                variability = np.random.uniform(0.15, 0.35)
            
            for year in years:
                # Add trend and random variation
                trend = (year - 2001) * np.random.uniform(-100, 100)
                random_variation = np.random.normal(0, base_area * variability)
                area = max(0, base_area + trend + random_variation)
                
                data.append({
                    'eco_id': eco_id,
                    'year': year,
                    'area_hectares': area
                })
        
        df = pd.DataFrame(data)
        df['eco_id_real'] = df['eco_id']  # For compatibility
    
    # Prepare statistics
    eco_stats, eco_order = prepare_forest_statistics(df)
    
    # Create output directory
    output_dir = 'outputs/forest_area_distribution'
    os.makedirs(output_dir, exist_ok=True)
    
    # Create visualization
    print("\nGenerating forest area distribution plot...")
    fig, scale_factor = plot_forest_area_distribution(
        df, eco_stats, eco_order,
        figsize=(10, 18),
        save_path=f"{output_dir}/figure8e"
    )
    
    # Analyze distribution patterns
    analysis_results = analyze_distribution_patterns(eco_stats)
    
    # Save detailed results
    stats_path = f"{output_dir}/forest_area_statistics.csv"
    eco_stats.to_csv(stats_path, index=False)
    print(f"\n✓ Detailed statistics saved: {stats_path}")
    
    # Print ecological insights
    print("\n" + "=" * 80)
    print("ECOLOGICAL INSIGHTS")
    print("=" * 80)
    
    # Group by ecoregion type
    group_i = [eco for eco in eco_order if eco.startswith('I')]
    group_ii = [eco for eco in eco_order if eco.startswith('II')]
    group_iii = [eco for eco in eco_order if eco.startswith('III')]
    
    print(f"\nEcoregion Groups:")
    print(f"  Group I (Eastern Monsoon): {len(group_i)} ecoregions")
    print(f"  Group II (Northwest Arid): {len(group_ii)} ecoregions")
    print(f"  Group III (Tibetan Plateau): {len(group_iii)} ecoregions")
    
    # Calculate average forest area by group
    for group_name, group_ecos in [('Group I', group_i), 
                                  ('Group II', group_ii), 
                                  ('Group III', group_iii)]:
        if group_ecos:
            group_stats = eco_stats[eco_stats['eco_id_real'].isin(group_ecos)]
            avg_area = group_stats['mean'].mean()
            avg_cv = group_stats['cv'].mean()
            print(f"\n{group_name}:")
            print(f"  Average forest area: {avg_area:,.0f} hectares")
            print(f"  Average variability (CV): {avg_cv:.3f}")
    
    # Conservation implications
    print("\n" + "=" * 80)
    print("CONSERVATION IMPLICATIONS")
    print("=" * 80)
    
    # Identify priority ecoregions
    high_area = eco_stats.nlargest(5, 'mean')
    high_var = eco_stats.nlargest(5, 'cv')
    
    print("\nPriority ecoregions for monitoring:")
    print("  Highest forest area:")
    for _, row in high_area.iterrows():
        print(f"    - {row['eco_id_real']}: {row['mean']:,.0f} ha")
    
    print("\n  Highest variability (may need targeted management):")
    for _, row in high_var.iterrows():
        print(f"    - {row['eco_id_real']}: CV = {row['cv']:.3f}")
    
    if scale_factor > 1:
        print(f"\nNote: Standard deviation values were scaled by {scale_factor:.1f} "
              f"for better visualization")
    
    print("\n✓ Analysis complete!")
    print(f"  Outputs saved to: {output_dir}/")
    print("=" * 60)

# ============================================================================
# EXECUTION
# ============================================================================

if __name__ == "__main__":
    main()
