def main():
    """
    Main function to run temporal dynamics analysis.
    """
    print("=" * 60)
    print("TEMPORAL DYNAMICS OF FOREST COVER LOSS")
    print("Corresponding to Fig. 9(a,b) in manuscript")
    print("=" * 60)
    
    import os
    
    # Create output directory
    output_dir = 'outputs/temporal_dynamics'
