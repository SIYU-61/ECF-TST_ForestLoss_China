        fig_a = plot_national_fcl_trends(
            national_yearly, trend_params,
            save_path=f"{output_dir}/figure9a"
        )
        
        # Print national statistics
        print("\nNational Statistics:")
        print(f"  Total forest loss (2001-2024): {trend_params['total_loss']:,.0f} hectares")
        print(f"  Average yearly loss: {trend_params['mean_loss']:,.0f} hectares")
        print(f"  Peak year: {trend_params['max_year']} "
              f"({trend_params['max_loss']:,.0f} hectares)")
        print(f"  Lowest year: {trend_params['min_year']} "
              f"({trend_params['min_loss']:,.0f} hectares)")
        print(f"  Trend: {trend_params['slope']:.1f} hectares/year "
              f"({'increasing' if trend_params['slope'] > 0 else 'decreasing'})")
    
    # PART B: Ecoregion Trends
    print("\n" + "=" * 60)
    print("PART B: ECOREGIONAL TRENDS ANALYSIS")
    print("=" * 60)
    
    # Load ecoregion data
    ecoregion_data_path = 'sample_data/forest_loss_analysis_results.csv'  # Update with your path
    ecoregion_df = load_ecoregion_fcl_data(ecoregion_data_path)
    
    if ecoregion_df is not None:
        # Plot ecoregion trends
        print("\nGenerating ecoregion FCL trends plot...")
