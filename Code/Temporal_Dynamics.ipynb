        print(f"  Key policy periods identifiable from peaks and troughs")
    
    if 'analysis_df' in locals():
        print("\nEcoregional Scale:")
        print(f"  Diverse trends across {len(analysis_df)} ecoregions")
        print(f"  {trend_summary['significant_count']} ecoregions show significant trends")
        print(f"  {trend_summary['increasing_count']} increasing vs. "
              f"{trend_summary['decreasing_count']} decreasing")
    
    print("\n✓ Analysis complete!")
    print(f"  Outputs saved to: {output_dir}/")
    print("=" * 60)

