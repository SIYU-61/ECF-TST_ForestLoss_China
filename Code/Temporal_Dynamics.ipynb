# Temporal Dynamics of Forest Cover Loss (2001-2024)
# National FCL trends and divergent ecoregional trends
# Corresponds to Fig. 9(a,b) in the manuscript

"""
OVERVIEW
This notebook analyzes the temporal dynamics of forest cover loss (FCL) 
at national and ecoregional scales from 2001 to 2024.

METHODOLOGY
Part A: National FCL Trends (2001-2024)
- Calculates national yearly forest loss area
- Computes annual change rates and linear trends
- Identifies key turning points (peak and trough years)
- Creates dual-axis visualization with bars, lines, and trend analysis

Part B: Ecoregional Divergent Trends
- Analyzes FCL trends across 35 ecoregions
- Classifies trends by magnitude and significance
- Creates grid of subplots showing individual ecoregion trajectories
- Identifies regions with increasing vs. decreasing trends

TREND CLASSIFICATION
- Strong Increase (>1000 ha/year)
- Moderate Increase (100-1000 ha/year)
- Relatively Stable (-100 to 100 ha/year)
- Moderate Decrease (-1000 to -100 ha/year)
- Sharp Decrease (< -1000 ha/year)
"""

# ============================================================================
# ENVIRONMENT SETUP
# ============================================================================

import pandas as pd
import numpy as np
import matplotlib.pyplot as plt
import seaborn as sns
from scipy import stats
from scipy.stats import linregress
import warnings
warnings.filterwarnings('ignore')

# Set publication style
plt.rcParams['font.family'] = 'Arial'
plt.rcParams['font.size'] = 12
plt.rcParams['axes.unicode_minus'] = False
sns.set_style("whitegrid")

# ============================================================================
# DATA PREPARATION - PART A: NATIONAL TRENDS
# ============================================================================

def load_national_fcl_data(file_path):
    """
    Load national forest cover loss data.
    
    Parameters:
    -----------
    file_path : str
        Path to CSV file with FCL data
        
    Returns:
    --------
    df : pandas.DataFrame
        DataFrame with national FCL data
    """
    try:
        df = pd.read_csv(file_path)
        print(f"✓ National FCL data loaded: {len(df)} rows")
        print(f"  Years: {df['year'].min()} to {df['year'].max()}")
        return df
    except Exception as e:
        print(f"✗ Error loading national data: {e}")
        return None

def calculate_national_trends(df):
    """
    Calculate national yearly forest loss and trends.
    
    Parameters:
    -----------
    df : pandas.DataFrame
        DataFrame with FCL data
        
    Returns:
    --------
    national_stats : pandas.DataFrame
        DataFrame with yearly statistics
    trend_params : dict
        Dictionary with trend parameters
    """
    # Group by year to get national totals
    national_yearly = df.groupby('year')['moving_avg_5yr'].sum().reset_index()
    national_yearly.columns = ['year', 'total_loss_ha']
    
    # Calculate yearly percentage change
    national_yearly['yearly_change_pct'] = national_yearly['total_loss_ha'].pct_change() * 100
    
    # Calculate linear trend
    z = np.polyfit(national_yearly['year'], national_yearly['total_loss_ha'], 1)
    p = np.poly1d(z)
    trend_line = p(national_yearly['year'])
    
    # Identify key points
    max_idx = national_yearly['total_loss_ha'].idxmax()
    min_idx = national_yearly['total_loss_ha'].idxmin()
    
    max_year = national_yearly.loc[max_idx, 'year']
    max_loss = national_yearly.loc[max_idx, 'total_loss_ha']
    min_year = national_yearly.loc[min_idx, 'year']
    min_loss = national_yearly.loc[min_idx, 'total_loss_ha']
    
    # Calculate statistics
    mean_loss = national_yearly['total_loss_ha'].mean()
    total_loss = national_yearly['total_loss_ha'].sum()
    
    trend_params = {
        'slope': z[0],
        'intercept': z[1],
        'trend_line': trend_line,
        'max_year': max_year,
        'max_loss': max_loss,
        'min_year': min_year,
        'min_loss': min_loss,
        'mean_loss': mean_loss,
        'total_loss': total_loss
    }
    
    return national_yearly, trend_params

# ============================================================================
# VISUALIZATION A: NATIONAL FCL TRENDS
# ============================================================================

def plot_national_fcl_trends(national_yearly, trend_params, 
                            figsize=(16, 10), save_path=None):
    """
    Create dual-axis plot showing national FCL trends with change rates.
    
    Parameters:
    -----------
    national_yearly : pandas.DataFrame
        Yearly national FCL statistics
    trend_params : dict
        Trend parameters and key points
    figsize : tuple
        Figure size (width, height)
    save_path : str, optional
        Path to save the figure
        
    Returns:
    --------
    fig : matplotlib.figure.Figure
        Generated figure
    """
    from matplotlib.ticker import FuncFormatter
    
    # Create figure with primary y-axis
    fig, ax1 = plt.subplots(figsize=figsize)
    
    # Format y-axis to show values in thousands
    def thousands_formatter(x, pos):
        return f'{x/1000:.0f}K'
    
    ax1.yaxis.set_major_formatter(FuncFormatter(thousands_formatter))
    
    # Plot bar chart for annual loss
    bars = ax1.bar(national_yearly['year'], national_yearly['total_loss_ha'],
                   color='lightblue', alpha=0.7, label='Annual Loss (bars)')
    
    # Plot line chart for annual loss
    line, = ax1.plot(national_yearly['year'], national_yearly['total_loss_ha'],
                     marker='o', linewidth=2, markersize=8, color='#e74c3c',
                     label='Annual Loss (line)')
    
    # Add trend line
    trend_line, = ax1.plot(national_yearly['year'], trend_params['trend_line'],
                          "k--", alpha=0.7, linewidth=2,
                          label=f'Trend ({trend_params["slope"]:.1f} ha/year)')
    
    # Mark highest and lowest points
    ax1.scatter(trend_params['max_year'], trend_params['max_loss'],
                color='red', s=150, zorder=5,
                label=f'Peak ({trend_params["max_year"]})')
    
    ax1.scatter(trend_params['min_year'], trend_params['min_loss'],
                color='green', s=150, zorder=5,
                label=f'Lowest ({trend_params["min_year"]})')
    
    # Create secondary y-axis for percentage change
    ax2 = ax1.twinx()
    change_line, = ax2.plot(national_yearly['year'], national_yearly['yearly_change_pct'],
                            color='purple', marker='s', linewidth=2, markersize=6,
                            label='Yearly Change Rate (%)')
    
    ax2.set_ylabel('Yearly Change Rate (%)', fontsize=14, color='purple')
    ax2.tick_params(axis='y', labelcolor='purple')
    ax2.axhline(y=0, color='gray', linestyle='--', alpha=0.7)
    
    # Add value annotations for selected years
    important_years = [2001, 2005, 2009, 2013, 2017, 2021, 2024]
    
    for i, row in national_yearly.iterrows():
        if row['year'] in important_years or row['year'] in [trend_params['max_year'], 
                                                           trend_params['min_year']]:
            offset = 8 if i % 2 == 0 else -20
            ax1.annotate(f'{row["total_loss_ha"]/1000:.0f}K',
                        (row['year'], row['total_loss_ha']),
                        textcoords="offset points",
                        xytext=(0, offset),
                        ha='center', fontsize=10,
                        bbox=dict(boxstyle='round,pad=0.3', facecolor='white', alpha=0.8))
    
    # Add value annotations for change rate (significant changes only)
    for i, (year, change) in enumerate(zip(national_yearly['year'], 
                                          national_yearly['yearly_change_pct'])):
        if i > 0 and abs(change) > 10:
            ax2.annotate(f'{change:.1f}%',
                        (year, change),
                        textcoords="offset points",
                        xytext=(0, 12),
                        ha='center', fontsize=9,
                        bbox=dict(boxstyle='round,pad=0.2', facecolor='lightyellow', alpha=0.7))
    
    # Format plot
    ax1.set_xlabel('Year', fontsize=14, fontweight='bold')
    ax1.set_ylabel('Forest Loss Area (thousand hectares)', fontsize=14, 
                  fontweight='bold', color='#e74c3c')
    ax1.tick_params(axis='y', labelcolor='#e74c3c')
    
    ax1.set_xticks(national_yearly['year'])
    ax1.set_xticklabels(national_yearly['year'], rotation=45)
    
    # Combine legends
    lines1, labels1 = ax1.get_legend_handles_labels()
    lines2, labels2 = ax2.get_legend_handles_labels()
    ax1.legend(lines1 + lines2, labels1 + labels2, loc='lower right', fontsize=10)
    
    plt.title('National Annual Forest Loss with Yearly Change Rate (2001-2024)',
             fontsize=16, fontweight='bold', pad=20)
    
    plt.grid(True, alpha=0.3)
    plt.tight_layout()
    
    # Save figure if path provided
    if save_path:
        import os
        os.makedirs(os.path.dirname(save_path), exist_ok=True)
        fig.savefig(f"{save_path}_national_trends.png", dpi=300, bbox_inches='tight')
        fig.savefig(f"{save_path}_national_trends.pdf", dpi=300, bbox_inches='tight')
        print(f"✓ Figure saved: {save_path}_national_trends.png")
    
    return fig

# ============================================================================
# DATA PREPARATION - PART B: ECOREGIONAL TRENDS
# ============================================================================

def load_ecoregion_fcl_data(file_path):
    """
    Load ecoregion forest cover loss data.
    
    Parameters:
    -----------
    file_path : str
        Path to CSV file with ecoregion FCL data
        
    Returns:
    --------
    df : pandas.DataFrame
        DataFrame with ecoregion FCL data
    """
    try:
        df = pd.read_csv(file_path)
        
        # Ecoregion mapping
        eco_id_mapping = {
            1: 'I01', 2: 'I02', 3: 'I03', 4: 'I04', 5: 'I05', 6: 'I07', 7: 'I08', 
            8: 'I10', 9: 'I11', 10: 'I12', 11: 'I14', 12: 'I15', 13: 'I16', 
            14: 'I17', 15: 'I18', 16: 'I19', 17: 'I20', 18: 'I21', 19: 'I22', 
            20: 'I23', 21: 'I24', 22: 'I25', 23: 'I26', 24: 'I27', 25: 'I28', 
            26: 'I29', 27: 'I30', 28: 'I31', 29: 'I32', 30: 'I33', 31: 'II01', 
            32: 'II05', 33: 'II07', 34: 'III07', 35: 'III09'
        }
        
        # Add ecoregion code column
        df['eco_id_real'] = df['eco_id'].map(eco_id_mapping)
        
        print(f"✓ Ecoregion FCL data loaded: {len(df)} rows")
        print(f"  Ecoregions: {df['eco_id_real'].nunique()}")
        print(f"  Years: {df['year'].min()} to {df['year'].max()}")
        
        return df
    except Exception as e:
        print(f"✗ Error loading ecoregion data: {e}")
        return None

def classify_ecoregion_trend(slope, p_value):
    """
    Classify ecoregion trend based on slope and statistical significance.
    
    Parameters:
    -----------
    slope : float
        Linear regression slope (ha/year)
    p_value : float
        Statistical significance p-value
        
    Returns:
    --------
    trend_type : str
        Trend classification
    color : str
        Color for visualization
    """
    if p_value > 0.05:
        return 'Non-significant', 'gray'
    
    if slope > 1000:
        return 'Strong Increase', 'red'
    elif slope > 100:
        return 'Moderate Increase', 'orange'
    elif slope > -100:
        return 'Relatively Stable', 'green'
    elif slope > -1000:
        return 'Moderate Decrease', 'lightblue'
    else:
        return 'Sharp Decrease', 'blue'

# ============================================================================
# VISUALIZATION B: ECOREGIONAL DIVERGENT TRENDS
# ============================================================================

def plot_ecoregion_trends_grid(df, figsize=(30, 35), save_path=None):
    """
    Create grid of subplots showing FCL trends for all ecoregions.
    
    Parameters:
    -----------
    df : pandas.DataFrame
        DataFrame with ecoregion FCL data
    figsize : tuple
        Figure size (width, height)
    save_path : str, optional
        Path to save the figure
        
    Returns:
    --------
    fig : matplotlib.figure.Figure
        Generated figure
    analysis_results : pandas.DataFrame
        DataFrame with trend analysis results
    """
    # Get unique ecoregions
    ecoregions = sorted(df['eco_id_real'].unique())
    
    # Create 7x5 grid of subplots
    fig, axes = plt.subplots(7, 5, figsize=figsize, sharex=True)
    axes = axes.flatten()
    
    # Colors for the plots
    annual_color = '#1f77b4'  # Blue for annual data
    trend_color = '#d62728'   # Red for trend line
    
    # Store analysis results
    analysis_results = []
    
    # Create plots for each ecoregion
    for i, eco_id in enumerate(ecoregions):
        if i >= len(axes):
            break
        
        ax = axes[i]
        eco_data = df[df['eco_id_real'] == eco_id].sort_values('year')
        
        if len(eco_data) < 3:
            # Insufficient data
            ax.text(0.5, 0.5, f'{eco_id}\nInsufficient Data',
                   transform=ax.transAxes, ha='center', va='center', fontsize=12)
            ax.set_frame_on(False)
            ax.tick_params(left=False, bottom=False, labelleft=False, labelbottom=False)
            continue
        
        # Extract data
        years = eco_data['year'].values
        loss_values = eco_data['area_hectares'].values
        
        # Calculate linear trend
        slope, intercept, r_value, p_value, std_err = linregress(years, loss_values)
        trend_line = slope * years + intercept
        
        # Classify trend
        trend_type, trend_color_class = classify_ecoregion_trend(slope, p_value)
        
        # Find max and min values
        max_idx = np.argmax(loss_values)
        min_idx = np.argmin(loss_values)
        max_year = years[max_idx]
        max_value = loss_values[max_idx]
        min_year = years[min_idx]
        min_value = loss_values[min_idx]
        
        # Plot annual loss line
        ax.plot(years, loss_values, 'o-', color=annual_color, linewidth=3,
                markersize=4, alpha=0.9)
        
        # Plot trend line
        ax.plot(years, trend_line, '-', color=trend_color, linewidth=2,
                alpha=0.9)
        
        # Mark maximum value
        ax.scatter(max_year, max_value, color='red', s=40,
                  marker='*', edgecolors='black', linewidth=0.5, zorder=5)
        
        # Mark minimum value
        ax.scatter(min_year, min_value, color='blue', s=40,
                  marker='*', edgecolors='black', linewidth=0.5, zorder=5)
        
        # Add ecoregion code
        ax.text(0.05, 0.95, eco_id, transform=ax.transAxes,
                verticalalignment='top', horizontalalignment='left',
                fontsize=14, fontweight='bold',
                bbox=dict(boxstyle='round', facecolor='white', alpha=0.8))
        
        # Add trend classification
        ax.text(0.05, 0.85, trend_type, transform=ax.transAxes,
                verticalalignment='top', horizontalalignment='left',
                fontsize=10, color=trend_color_class,
                bbox=dict(boxstyle='round', facecolor='white', alpha=0.7))
        
        # Format y-axis
        ax.yaxis.set_major_formatter(plt.FuncFormatter(
            lambda x, p: format(int(x/1000), ',') + 'k' if x >= 1000 else format(int(x), ',')
        ))
        
        # Set x-axis ticks
        ax.set_xticks([2001, 2006, 2011, 2016, 2021])
        ax.tick_params(axis='x', rotation=45)
        
        # Add grid
        ax.grid(True, alpha=0.3, linestyle='-', linewidth=0.5)
        ax.set_axisbelow(True)
        
        # Store analysis results
        analysis_results.append({
            'ecoregion': eco_id,
            'slope': slope,
            'intercept': intercept,
            'r_squared': r_value**2,
            'p_value': p_value,
            'trend_type': trend_type,
            'mean_loss': np.mean(loss_values),
            'max_year': max_year,
            'max_value': max_value,
            'min_year': min_year,
            'min_value': min_value
        })
    
    # Hide unused subplots
    for i in range(len(ecoregions), len(axes)):
        axes[i].set_visible(False)
    
    # Add common labels
    fig.text(0.5, 0.02, 'Year', ha='center', fontsize=16, fontweight='bold')
    fig.text(0.04, 0.5, 'Forest Loss Area (hectares)', va='center',
             rotation='vertical', fontsize=16, fontweight='bold')
    
    plt.tight_layout(rect=[0.04, 0.04, 0.96, 0.96])
    
    # Save figure if path provided
    if save_path:
        import os
        os.makedirs(os.path.dirname(save_path), exist_ok=True)
        fig.savefig(f"{save_path}_ecoregion_trends.png", dpi=300, bbox_inches='tight')
        fig.savefig(f"{save_path}_ecoregion_trends.pdf", dpi=300, bbox_inches='tight')
        print(f"✓ Figure saved: {save_path}_ecoregion_trends.png")
    
    # Convert analysis results to DataFrame
    analysis_df = pd.DataFrame(analysis_results)
    
    return fig, analysis_df

# ============================================================================
# ANALYSIS FUNCTIONS
# ============================================================================

def analyze_trend_patterns(analysis_df):
    """
    Analyze patterns in ecoregion FCL trends.
    
    Parameters:
    -----------
    analysis_df : pandas.DataFrame
        DataFrame with trend analysis results
        
    Returns:
    --------
    trend_summary : dict
        Dictionary with trend summary statistics
    """
    print("\n" + "=" * 60)
    print("ECOREGION TREND ANALYSIS")
    print("=" * 60)
    
    # Count trends by type
    trend_counts = analysis_df['trend_type'].value_counts()
    
    print("\nTrend Distribution:")
    for trend_type, count in trend_counts.items():
        print(f"  {trend_type}: {count} ecoregions")
    
    # Statistical significance
    significant = analysis_df[analysis_df['p_value'] < 0.05]
    non_significant = analysis_df[analysis_df['p_value'] >= 0.05]
    
    print(f"\nStatistical Significance:")
    print(f"  Significant trends (p < 0.05): {len(significant)} ecoregions")
    print(f"  Non-significant trends: {len(non_significant)} ecoregions")
    
    # Direction of significant trends
    increasing = significant[significant['slope'] > 0]
    decreasing = significant[significant['slope'] < 0]
    
    print(f"\nDirection of Significant Trends:")
    print(f"  Increasing: {len(increasing)} ecoregions")
    print(f"  Decreasing: {len(decreasing)} ecoregions")
    
    # Most extreme trends
    if len(significant) > 0:
        fastest_increase = significant.loc[significant['slope'].idxmax()]
        fastest_decrease = significant.loc[significant['slope'].idxmin()]
        
        print(f"\nMost Extreme Trends:")
        print(f"  Fastest increase: {fastest_increase['ecoregion']} "
              f"({fastest_increase['slope']:.1f} ha/year)")
        print(f"  Fastest decrease: {fastest_decrease['ecoregion']} "
              f"({fastest_decrease['slope']:.1f} ha/year)")
    
    # Regional patterns
    print(f"\nRegional Patterns:")
    
    # Group by ecoregion prefix
    analysis_df['eco_group'] = analysis_df['ecoregion'].str[:1]
    
    for group in ['I', 'II', 'III']:
        group_data = analysis_df[analysis_df['eco_group'] == group]
        if len(group_data) > 0:
            avg_slope = group_data['slope'].mean()
            sign_ratio = len(group_data[group_data['p_value'] < 0.05]) / len(group_data)
            print(f"  Group {group}: {len(group_data)} ecoregions, "
                  f"avg slope = {avg_slope:.1f}, "
                  f"significant = {sign_ratio:.1%}")
    
    return {
        'trend_counts': trend_counts.to_dict(),
        'significant_count': len(significant),
        'increasing_count': len(increasing),
        'decreasing_count': len(decreasing)
    }

